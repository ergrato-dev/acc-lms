# EditorConfig for ACC LMS
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# Rust files
[*.rs]
indent_size = 4

# TOML files (Cargo.toml)
[*.toml]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# SQL files
[*.sql]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Docker
[Dockerfile]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# JSON with comments
[*.jsonc]
indent_size = 2

# Package files
[{package.json,package-lock.json,Cargo.toml,Cargo.lock}]
indent_size = 2
