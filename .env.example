# =============================================================================
# ACC LMS - Environment Variables (Development)
# =============================================================================
# Copy this file to .env and customize for your environment
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
APP_NAME=acc-lms
APP_DEBUG=true

# -----------------------------------------------------------------------------
# Frontend (React + Vite)
# -----------------------------------------------------------------------------
VITE_API_URL=http://localhost:8080
VITE_APP_ENV=development

# -----------------------------------------------------------------------------
# Backend (Rust Services)
# -----------------------------------------------------------------------------
RUST_LOG=debug
SERVICE_PORT=8080

# JWT Configuration
JWT_SECRET=dev_jwt_secret_change_in_production_minimum_32_chars
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# -----------------------------------------------------------------------------
# PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=acc
POSTGRES_PASSWORD=acc_secret
POSTGRES_DB=acc_lms
DATABASE_URL=postgres://acc:acc_secret@postgres:5432/acc_lms

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# MongoDB
# -----------------------------------------------------------------------------
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_USER=acc
MONGO_PASSWORD=acc_secret
MONGODB_URL=mongodb://acc:acc_secret@mongodb:27017/acc_notifications?authSource=admin

# -----------------------------------------------------------------------------
# ClickHouse
# -----------------------------------------------------------------------------
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=acc
CLICKHOUSE_PASSWORD=acc_secret
CLICKHOUSE_URL=http://acc:acc_secret@clickhouse:8123

# -----------------------------------------------------------------------------
# MinIO (S3 Compatible Storage)
# -----------------------------------------------------------------------------
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_USER=acc_minio
MINIO_PASSWORD=acc_minio_secret
MINIO_BUCKET=acc-lms
MINIO_ENDPOINT=http://minio:9000

# -----------------------------------------------------------------------------
# External Services (Development/Test Keys)
# -----------------------------------------------------------------------------
# Stripe (Test Mode)
STRIPE_PUBLIC_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Email (Development - Use Mailhog or similar)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@acc-lms.local

# -----------------------------------------------------------------------------
# Observability
# -----------------------------------------------------------------------------
# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Jaeger (Tracing)
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
